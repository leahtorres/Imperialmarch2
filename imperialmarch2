#Name of the song: imperial March
#sheet music: https://www.musicnotes.com/sheetmusic/mtd.asp?ppn=MN0017607
#Bpm used: https://songbpm.com/imperial-march?q=imperial%20march
use_synth:saw
use_bpm 95
s = 0.25
3.times do
  play :g4
  sleep 4*s
end
play :e4
sleep 3*s
play :b4
sleep s
play :g4
sleep 4*s
play :e4
sleep 3*s
play :b4
sleep s
play :g4
sleep 8*s

3.times do
  play :d5
  sleep 4*s
end
play :e5
sleep 0.75
play :b4
sleep 0.25
play :g4
sleep 4*s
play :e4
sleep 0.75
play :b4
sleep s
play :g4
sleep 8*s
x = :drum_heavy_kick
a = 0
with_fx :echo do
  live_loop :drum do
    sample x
    sleep 0.5
    sample x
    sleep 0.5
    sample :drum_snare_hard, amp: a
    sleep 0.5
    sample :drum_cymbal_open
    sleep 0.5
    a = a+1
  end
end
live_loop :ImperialMarch do
  3.times do
    play :g4
    sleep 4*s
  end
  play :e4
  sleep 3*s
  play :b4
  sleep s
  play :g4
  sleep 4*s
  play :e4
  sleep 3*s
  play :b4
  sleep s
  play :g4
  sleep 8*s
  
  3.times do
    play :d5
    sleep 4*s
  end
  play :e5
  sleep 0.75
  play :b4
  sleep 0.25
  play :g4
  sleep 4*s
  play :e4
  sleep 0.75
  play :b4
  sleep s
  play :g4
  sleep 8*s
end
